<p id="notice"><%= notice %></p>
<div class="areasDiv">
<h3>Areas</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Capacity</th>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td><%= area.capacity %></td>
        <td><%= image_tag area.image.url(:thumb) %></td>
        <td><%= area.description %></td>
        <td><%= link_to 'Show', area %></td>
        <% if can? :update, @area %>
          <td><%= link_to 'Edit', edit_area_path(area) %></td>
          <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Area', new_area_path %>
</div>
